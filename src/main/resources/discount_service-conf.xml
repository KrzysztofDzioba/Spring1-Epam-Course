<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="discountService" class="ua.epam.spring.hometask.service.implementation.DiscountServiceImpl">
        <property name="strategies" ref="strategiesDatabase"/>
    </bean>

    <bean id="discountStrategyBirthday" class="ua.epam.spring.hometask.service.implementation.DiscountStrategyBirthday"/>
    <bean id="discountStrategyEvery10Tickets" class="ua.epam.spring.hometask.service.implementation.DiscountStrategyEvery10Tickets"/>
    <bean id="strategiesDatabase" class="ua.epam.spring.hometask.dao.StrategiesDatabase">
        <property name="strategies">
            <list>
                <ref bean="discountStrategyBirthday"/>
                <ref bean="discountStrategyEvery10Tickets"/>
            </list>
        </property>
    </bean>

</beans>